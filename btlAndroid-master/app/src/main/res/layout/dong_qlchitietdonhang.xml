<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewctdh"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="madonhang"
                    android:textColor="#FF9800"
                    android:textSize="20sp"
                    android:id="@+id/tv_madonhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="masanpham"
                    android:textColor="#FF9800"
                    android:textSize="20sp"
                    android:id="@+id/tv_masanpham"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Tensanpham"
                    android:textColor="#FF1100"
                    android:textSize="20sp"
                    android:id="@+id/tv_tenspx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView

                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Gia"
                    android:textColor="#3F51B5"
                    android:textSize="20sp"
                    android:id="@+id/tv_giaspx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/tv_soluong"
                    android:text="Soluong"
                    android:textColor="#3F51B5"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#000"
        android:text="xxx"
        />
</LinearLayout>