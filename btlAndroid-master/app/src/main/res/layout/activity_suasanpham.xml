<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarqlsanpham"
        android:background="#716562"
        app:titleTextColor="#f9f6f5"
        app:title="Sửa thông tin sản phẩm"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/border"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="CẬP NHẬT SẢN PHẨM"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="35dp"
            android:id="@+id/edt_suatensanpham"
            android:inputType="text"
            android:hint="Nhập tên sản phẩm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="35dp"
            android:id="@+id/edt_suagia"
            android:hint="Nhập giá"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="35dp"
            android:hint="Nhập link hình ảnh sản phẩm"
            android:id="@+id/edt_suaimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="35dp"
            android:hint="Nhập mô tả sản phẩm"
            android:id="@+id/edt_suamota"
            android:maxLines="1"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="35dp"
            android:hint="Nhập ID loại sản phẩm(1 or 2 or 3)"
            android:id="@+id/edt_suaidloaisanpham"
            android:inputType="number"
            android:digits="123"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginLeft="50dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Cập nhật"
                android:id="@+id/btn_suacapnhat"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_marginLeft="70dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="trở về"
                android:id="@+id/btn_suaback"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>